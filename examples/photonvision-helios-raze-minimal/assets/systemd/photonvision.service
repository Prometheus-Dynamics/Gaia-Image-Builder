[Unit]
Description=PhotonVision Runtime
After=network.target
Wants=network.target

[Service]
Type=simple
WorkingDirectory=/opt/photonvision
EnvironmentFile=-/etc/default/photonvision
ExecStartPre=/bin/mkdir -p /opt/photonvision/photonvision_config
ExecStart=/usr/local/bin/photonvision-launch.sh
ExecStop=/bin/systemctl kill photonvision
Restart=on-failure
RestartSec=1
Nice=-10

[Install]
WantedBy=multi-user.target
